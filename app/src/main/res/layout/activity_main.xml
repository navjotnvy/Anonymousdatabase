<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".MainActivity"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Number of Records"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/textview01"
            android:textSize="24sp"
            android:textStyle="normal|bold"
            android:layout_weight="1" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/stidlayout">

            <TextView
                android:text="Student ID"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/stid"
                android:layout_weight="1"
                android:gravity="center"
                android:textStyle="normal|bold"
                android:textSize="18sp"
                android:textAlignment="viewStart" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/stdid_key"
                android:layout_weight="2"
                android:hint="T000000"
                android:textSize="20sp"
                android:layout_marginLeft="10dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/stdname_layout"
            android:layout_weight="1">

            <TextView
                android:text="Student Name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/stdname"
                android:layout_weight="1"
                android:textStyle="normal|bold"
                android:gravity="center"
                android:textSize="18sp"
                android:textAlignment="viewStart" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/stdname_value"
                android:layout_below="@+id/textView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="20sp"
                android:layout_weight="2.00"
                android:hint="John Smith"
                android:layout_marginLeft="10dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/control_layout">

            <Button
                android:text="Add Recored"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_below="@+id/stdname_value"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/add_record"
                android:textStyle="normal|bold"
                android:textSize="24sp"
                android:layout_weight="1" />

            <Button
                android:text="Clear All"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/clear_all"
                android:layout_weight="1"
                android:textSize="24sp"
                android:textStyle="normal|bold" />
        </LinearLayout>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/listview01"
            android:layout_marginTop="20dp"
            android:layout_weight="6" />

    </LinearLayout>
